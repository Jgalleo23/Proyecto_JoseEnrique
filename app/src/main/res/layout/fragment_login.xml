<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <Switch
            android:id="@+id/swTheme"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Tema Oscuro"
            />
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/welcomeText"/>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"/>


        <EditText
            android:id="@+id/etUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="1"
            android:singleLine="true"
            android:autofillHints="username"
            android:hint="Usuario"/>

        <EditText
            android:id="@+id/etContrasena"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="1"
            android:singleLine="true"
            android:autofillHints="contrasena"
            android:hint="ContraseÃ±a"/>

        <Button
            android:id="@+id/btIniciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Iniciar Sesion"/>
    </LinearLayout>

    <TextView
        android:id="@+id/trucoRumano"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="R.id.action_loginFragment_to_usuarioIntroFragment"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>